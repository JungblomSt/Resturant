<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pergament_background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_head_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/gg_logga_fri_svart" />

    <TextView
        android:id="@+id/resturant_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/medievalsharp"
        android:text="Glada Galten"
        android:textSize="@dimen/big_size_text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_towns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/medievalsharp"
        android:gravity="center"
        android:text="Leksand \n Torpa Stenhus \n Visby"
        android:textSize="@dimen/big_size_text"
        android:layout_margin="24dp"
        android:background="@color/dark_bege"
        android:padding="16dp"/>


    <TextView
        android:id="@+id/tv_map_marker"
        android:layout_width="wrap_content"
        android:layout_height="306dp"
        android:background="@color/dark_bege"
        android:fontFamily="@font/medievalsharp"
        android:gravity="center"
        android:padding="16dp"
        android:text="This is where I show my marvels skills and implement Google maps to show al the places we go."
        android:textSize="@dimen/big_size_text" />


</LinearLayout>